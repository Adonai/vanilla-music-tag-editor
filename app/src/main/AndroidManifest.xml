<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.kanedias.vanilla"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/icon"
        android:supportsRtl="true">
        <service
            android:name=".PluginService"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.vanilla.action.WAKE_PLUGIN"/>
                <action android:name="com.vanilla.action.LAUNCH_PLUGIN"/>
            </intent-filter>
        </service>

        <receiver
            android:name=".PluginQueryBroadcastReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.vanilla.action.REQUEST_PLUGIN_PARAMS"/>
            </intent-filter>
        </receiver>

        <activity android:name=".TagEditActivity" android:theme="@android:style/Theme.DeviceDefault.Dialog">
        </activity>
    </application>

</manifest>